<div class="container" class="d-inline-flex p-2 bd-highlight">
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <div id="<%= dom_id restaurant %>">
        <p>
          <strong>Name:</strong>
          <%= restaurant.name %>
        </p>

        <p>
          <strong>Address:</strong>
          <%= restaurant.address %>
        </p>

        <p>
          <strong>Phone number:</strong>
          <%= restaurant.phone_number %>
        </p>

        <p>
          <strong>Category:</strong>
          <%= restaurant.category %>
        </p>

      </div>
    </div>
  </div>
</div>
